<%- include('partials/header') -%>

<div class="d-flex vh-100 align-items-center justify-content-center login_bg">
    <!-- Form div -->
    <div class="d-flex card col-6 form_bg  pt-3 px-5 pb-3">
        <div class="d-flex justify-content-center  ">
            <h1>Send Amount</h1>
        </div>
        <!-- to, password, send_amount -->
        <div class="text-center mt-4">
            <% if (bg === 1 && status !== null ) { %>
                <h5 class="p-2 bg-success">
                    <%= status %>
                </h5>
            <% } else if(bg === 0 && status !== null) { %>
                <h5 class="p-2 bg-danger">
                    <%= status %>
                </h5>

            <% } %>
            <form>

                <div class="form-floating  mb-3">
                    <input required type="email" name="to" class="form-control " id="floatingInput"
                           placeholder="Send to?">
                    <label for="floatingInput">Send To?</label>
                </div>
                <div class="form-floating  mb-3">
                    <input required type="number" name="send_amount" class="form-control " id="floatingInput"
                           placeholder="Amount">
                    <label for="floatingInput">Enter amount to send</label>
                </div>
                <div class="form-floating  mb-3">
                    <input required type="password" name="password" class="form-control " id="floatingInput"
                           placeholder="Password">
                    <label for="floatingInput">Password</label>
                </div>
                <div class="d-flex flex mt-3 justify-content-center">
                    <button class="btn-primary rounded-3  py-2 w-50 px-5" type="submit" formmethod="post"
                            formaction="/send">Send
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('partials/footer') -%>